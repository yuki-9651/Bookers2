<div class="container">  
  <div class="row">  
 
    <div class="col-md-3">
     <%= render 'users/make', book: @book %>
    </div>
    
    
    <div class="col-md-8 offset-md-1"> 
     <h2>Users</h2>
      <table class="table table-striped">
        <thead>
         <tr> 
         <th></th>
          <th>image</th>
          <th>name</th>
          <th colspan="3"></th>
         </tr> 
        </thead>
        
        <tbody>
            <% @users.each do |user| %>
              <tr>
                
                <td>
                  <% if user %>
                    <%= image_tag user.get_profile_image(100,100) %>
                  <% else %>
                    <%= image_tag 'default-image', size: "100x100" %>
                  <% end %>
                </td>
                
                <th>
                　 <%= user.name %>
                </th>
                
                <th>
                　 <%= link_to "Show", book_path(book) %>
                </th>
                
              </tr>
            <% end %>
          </tbody>
          
           
        </table>
      </div> 
    </div>
 
  </div>
</div>