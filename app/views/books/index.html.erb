
<div class="container">  

  <div class = "error_explanation">
   <% if @book.errors.any? %>
   <h3>
     <%= @book.errors.count %>errors prohibited this obj from being saved:
   </h3>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
   <% end %>
  </div>
  

 <div class="row">  

  <div class="col-md-3">
   <%= render 'books/make', book: @book,user: @user %>
  </div>



    <div class="col-md-8 offset-md-1"> 
     <h2>Books</h2>
      <table class="table table-striped">
        <thead>
         <tr> 
         <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
         </tr> 
        </thead>
        
        <tbody>
         <% @books.each do |book| %>
           <tr>
              <td>
                <% if book.user.profile_image.attached? %>
                  <%= link_to user_path(book.user) do %>
          　　　　　　　　<%= image_tag book.user.profile_image.variant(resize_to_limit: [100, 100]).processed %>
                  <% end %> 
                <% else %>
                  <%= link_to user_path(book.user) do %>
                   <%= image_tag 'default-image', size: "100x100" %>
                  <% end %>
                <% end %>
              </td>
              <td>
               <%= link_to book.title, book_path(book) %>
              </td>
              <td>
               <%= book.body %>
              </td>
           </tr>
         <% end %>
        </tbody>
          
           
      </table>
    </div> 
 </div>
</div>
</div>  





