<div class="container">  
 <div class="row">  
  <div class="col-md-3">
   <%= render 'books/make', book: @book %>
  </div>



    <div class="col-md-8 offset-md-1"> 
     <h2>Books</h2>
      <table class="table table-striped">
        <thead>
         <tr> 
         <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
         </tr> 
        </thead>
        
        <tbody>
         <% @books.each do |book| %>
           <tr>
              <td>
                <% if @book.user %>
                  <%= image_tag book.user.get_profile_image(100,100) %>
                <% else %>
                  <%= image_tag 'default-image', size: "100x100" %>
                <% end %>
              </td>
              <td>
               <%= link_to book.title, book_path(book) %>
              </td>
              <td>
               <%= book.body %>
              </td>
              
           </tr>
         <% end %>
        </tbody>
          
           
      </table>
    </div> 
 </div>
</div>
</div>  





