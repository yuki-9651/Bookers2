
<div class="container">  
  <div class="row">  
  
    <div class="col-lg-4">
      
      <h1>User info</h1>

        <%= form_with model: @book, url:'/books' do |f| %>
        
          <% if @book.image.attached? %>
            <%= image_tag @book.image, size: "100x100" %>
          <% else %>
            <%= image_tag 'default-image', size: "100x100" %>
          <% end %>
          
        
        <% end %>
        
      <table class = "table">
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th>
               <%= current_user.name %>
            </th>
          </tr>
          <tr>
            <th>introduction</th>
            <th>
            　<%= current_user.introduction %>
            </th>
          </tr>
        </tbody>
      </table>
      <h1>New book</h1>

        <%= form_with model: Book.new do |f| %>
          <h4>Title</h4>
          <%= f.text_field :title %>
        	
          <h4>Opinion</h4>
          <%= f.text_area :body %>
        	
          <%= f.submit 'Create Book' %>
        <% end %>

    </div>
    

    <div class="col-lg-8"> 
     <h1>Books</h1>
      <table class="table table-striped">
        <thead>
         <tr> 
         <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
         </tr> 
        </thead>
        
        <tbody>
         <% @books.each do |book| %>
           <tr>
              <td>
                <% if @book.user %>
                  <%= image_tag book.user.get_profile_image(100,100) %>
                <% else %>
                  <%= image_tag 'default-image', size: "100x100" %>
                <% end %>
              </td>
              <th>
              　 <%= book.title %>
              </th>
           </tr>
         <% end %>
        </tbody>
          
           
      </table>
    </div> 
    
    
 </div>
</div>





