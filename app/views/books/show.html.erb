
<div class="container">  
  <div class="row">  
  
    <div class="col-md-3">
      
      <h2>User info</h2>

        <%= form_with model: @book, url:'/books' do |f| %>
        
          <% if @book.image.attached? %>
            <%= image_tag @book.image, size: "100x100" %>
          <% else %>
            <%= image_tag 'default-image', size: "100x100" %>
          <% end %>
          
        
        <% end %>
        
      <table class = "table">
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th>
               <%= current_user.name %>
            </th>
          </tr>
          <tr>
            <th>introduction</th>
            <th>
            　<%= current_user.introduction %>
            </th>
          </tr>
        </tbody>
      </table>
      <h2>New book</h2>

        <%= form_with model: Book.new do |f| %>
          <h4>Title</h4>
          <%= f.text_field :title %>
        	
          <h4>Opinion</h4>
          <%= f.text_area :body %>
        	
          <%= f.submit 'Create Book' %>
        <% end %>

    </div>
    

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table table-striped">
        <tbody>
          <tr>
            <td>
                <% if @book.image.attached? %>
                　<%= image_tag @book.image, size: "100x100" %>
                　<%= @book.user.name %>
                <% else %>
                　<%= image_tag 'default-image', size: "100x100" %>
                　<div>
                　    <%= link_to @book.user.name,user_path(@book) %>
                　</div>
                <% end %>
              <th>
              <%= link_to @book.title, book_path(@book) %>
              </th>
              <th>
              　 <%= @book.body %>
              </th>
              <th>
              　 <%= link_to "Edit", edit_book_path(@book) %>
              </th>
              <th>
              　  <% if @book.user == current_user %>
                   <%= link_to "Destroy", book_path(@book), method: :delete %>
                 <% end %>
              </th>
            </td>
              
           </tr>
        </tbody>
          
           
      </table>
    </div> 
    
    
 </div>
</div>

