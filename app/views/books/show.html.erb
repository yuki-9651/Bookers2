<div class="container">  
 <div class="row">  
    <div class="col-md-3">
     
     
      <h2>User info</h2>
        
        
          <% if @book.user.profile_image.attached? %>
            <%= image_tag @book.user.profile_image.variant(resize_to_limit: [100, 100]).processed %>
          <% else %>
            <%= image_tag 'default-image', size: "100x100" %>
          <% end %>
          
          
        
      <table class = "table">
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th>
              <%= @book.user.name %>
            </th>
          </tr>
          <tr>
            <th>introduction</th>
            <th>
              <%= @book.user.introduction %>
            </th>
          </tr>
        </tbody>
      </table>
      
      <div class = "row">
          
         <% if @book.user == current_user %>
            <%= link_to edit_user_path(current_user), class: "btn btn-outline-secondary btn-block" do %>
              <i class="fa-solid fa-user-gear"></i>
            <% end %>
          <% else %>
            <%= link_to books_path, class: "btn btn-outline-secondary btn-block" do %>
              <i class="fa-solid fa-user-gear"></i>
            <% end %>
          <% end %>
          
      </div>
      
      
      <h2>New book</h2>

        <%= form_with model: @apple do |f| %>
          <h4>Title</h4>
          <%= f.text_field :title, value: ''  %>
        	
          <h4>Opinion</h4>
          <%= f.text_area :body, value: ''  %>
        	
          <%= f.submit 'Create Book' %>
        <% end %>
     
     
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table table-striped">
        
        <tbody>
           
              <th> 
                
                  <% if @book.user.profile_image.attached? %>
                    <%= image_tag @book.user.profile_image.variant(resize_to_limit: [100, 100]).processed %>
                    <div>
                  　    <%= link_to @book.user.name,user_path(@book.user) %>
                  　</div>
                  <% else %>
                    <%= image_tag 'default-image', size: "100x100" %>
                    <div>
                  　    <%= link_to @book.user.name,user_path(@book.user) %>
                  　</div>
                  <% end %>
              </th>
           
              <th>
                <%= link_to @book.title, book_path(@book) %>
              </th>
              
              <th>
                <%= @book.body %>
              </th>
              
              <th>
                  <% if @book.user == current_user %>
                     <%= link_to "Edit", edit_book_path(@book) %>
                  <% end %>
              </th>
              
              <th>
              　  <% if @book.user == current_user %>
                   <%= link_to "Destroy", book_path(@book), method: :delete %>
                 <% end %>
              </th>
              
            
       
        </tbody>
          
           
      </table>
    </div> 
 </div>
</div>
</div>
</div>

