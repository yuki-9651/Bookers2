<div class="container">  
 <div class="row">  
    <div class="col-md-3">
     <%= render 'books/make' %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table table-striped">
        
        <tbody>
  
           
              <th> 
                <%= form_with model: @user, local: true, multipart: true do |f| %>
                
                  <% if @user.profile_image.attached? %>
                    <%= image_tag @user.profile_image.variant(resize_to_limit: [100, 100]).processed %>
                  <% else %>
                    <%= image_tag 'default-image', size: "100x100" %>
                    <div>
                  　    <%= link_to @book.user.name,user_path(@book) %>
                  　</div>
                  <% end %>
                  
                <% end %>
              </th>
           
              <th>
                <%= link_to @book.title, book_path(@book) %>
              </th>
              
              <th>
                <%= @book.body %>
              </th>
              
              <th>
                
                  <% if @book.user == current_user %>
                    <a class = "btn btn-sm btn-success edit_book">
                     <%= link_to "Edit", edit_book_path(@book) %>
                    </a>
                  <% end %>
                
              </th>
              
              <th>
              　  <% if @book.user == current_user %>
                   <%= link_to "Destroy", book_path(@book), method: :delete %>
                 <% end %>
              </th>
              
            
       
        </tbody>
          
           
      </table>
    </div> 
 </div>
</div>
</div>
</div>

