<h1>Editing Book</h1>

<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
	
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  
	
  <%= f.submit 'Update Book' %>
<% end %>

<div>
  <% if @book.user == current_user %>
    <%= link_to "Show", book_path(@book) %>
    |
    <%= link_to "Back", books_path(@book) %>
  <% end %>
</div>
