<h1>User info</h1>

<%= form_with model: @book, url:'/books' do |f| %>

  <h4>Name</h4>
  <%= f.text_field :title %>
  
  <h4>Image</h4>
  <% if book.image.attached? %>
    <%= image_tag book.image, size: "200x200" %>
  <% else %>
    <%= image_tag 'no_image', size: "200x200" %>
  <% end %>
  
  <h4>Introduction</h4>
  <%= f.text_area :body %>
  <!-- 追加部分 -->
  
  <%= f.submit 'Update User' %>
  
<% end %>
